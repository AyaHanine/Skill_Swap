{% extends 'base.html.twig' %}

{% block title %}Gestion des offres{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Gestion des offres</h1>

        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('admin_new_offer') }}" class="btn btn-success btn-lg">Ajouter une offre</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Titre</th>
                            <th scope="col">Description</th>
                            <th scope="col">Skill Offered</th>
                            <th scope="col">Skill wanted</th>
                            <th scope="col">IsNegotiable</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for offer in offers %}
                            <tr>
                                <td>{{ offer.title }}</td>
                                <td>{{ offer.description }}</td>
                                <td>{{ offer.skillOffered.name }}</td>
                                <td>{{ offer.skillWanted.name }}</td>
                                <td>{{ offer.isNegotiable }}</td>
                                <td class="text-center">
                                    <a href="{{ path('admin_edit_offer', {'id': offer.id}) }}" class="btn btn-warning btn-sm mx-1" title="Modifier l'offre">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <a href="{{ path('admin_delete_offer', {'id': offer.id}) }}" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')" title="Supprimer l'offre">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
