{% extends 'base.html.twig' %}

{% block title %}Gestion des Signalements{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-6">Gestion des Signalements</h2>

    {% if reports is empty %}
        <p class="text-center text-gray-500">Aucun signalement en attente.</p>
    {% else %}
        <table class="w-full bg-white shadow-lg rounded-lg overflow-hidden">
            <thead class="bg-gray-200 text-gray-700">
                <tr>
                    <th class="py-3 px-4 text-left">Offre</th>
                    <th class="py-3 px-4 text-left">Signalé par</th>
                    <th class="py-3 px-4 text-left">Raison</th>
                    <th class="py-3 px-4 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for report in reports %}
                    <tr class="border-b">
                        <td class="py-3 px-4">
                            <a href="{{ path('offer_show', { id: report.offer.id }) }}" class="text-blue-600 hover:underline">
                                {{ report.offer.title }}
                            </a>
                        </td>
                        <td class="py-3 px-4">{{ report.maker.firstName }} {{ report.maker.lastName }}</td>
                        <td class="py-3 px-4">{{ report.reason }}</td>
                        <td class="py-3 px-4">
                            <a href="{{ path('admin_approve_report', { id: report.id }) }}" class="bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition duration-300">
                                ✅ Approuver
                            </a>
                            <a href="{{ path('admin_reject_report', { id: report.id }) }}" class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition duration-300">
                                ❌ Rejeter
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
