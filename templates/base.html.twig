<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkillSwap - Exchange your knowledge</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.3/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-messaging.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<script src="{{ asset('js/firebase-config.js') }}"></script>
<script>
    requestNotificationPermission();
</script>

<body class="text-black">
    <header class="bg-purple-700 py-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <div class="text-white font-bold text-2xl">
                Skill Swap
            </div>
            <div>
                <nav class="flex flex-wrap items-center space-x-6 text-black">
                    {% if app.user %}
                        {% if is_granted('ROLE_USER') and is_granted('ROLE_ADMIN') %}
                            <div class="relative">
                                <button onclick="toggleDropdown()" class="bg-white text-purple-700 px-4 py-2 rounded-lg font-bold shadow">Role</button>
                                <div id="dropdown-menu" class="hidden absolute bg-white shadow-lg mt-2 rounded-lg py-2 w-48">
                                    <a href="#" onclick="setRole('user')" class="block px-4 py-2 text-gray-800 hover:bg-purple-200">User</a>
                                    <a href="#" onclick="setRole('admin')" class="block px-4 py-2 text-gray-800 hover:bg-purple-200">Admin</a>
                                </div>
                            </div>
                            <div id="user-links" class="space-x-4 hidden text-black">
                                <a href="{{ path('offer_index') }}" class="hover:text-gray-300 text-black">Offers</a>
                                <a href="{{ path('dashboard') }}" class="hover:text-gray-300 text-black">My infos</a>
                                <a href="{{ path('request_index') }}" class="hover:text-gray-300 text-black">üì© Requests</a>
                                <a href="{{ path('app_notification') }}" class="hover:text-gray-300 text-black">üõéÔ∏è Notifications</a>
                                <a href="{{ path('chat_index') }}" class="hover:text-gray-300 text-black">Chat</a>
                            </div>
                            <div id="admin-links" class="space-x-4 hidden">
                                <a href="{{ path('app_skill') }}" class="hover:text-gray-300 text-black">Skills</a>
                                <a href="{{ path('app_user') }}" class="hover:text-gray-300 text-black">Users</a>
                                <a href="{{ path('admin_manage_reports') }}" class="hover:text-gray-300 text-black">Reports</a>
                                <a href="{{ path('admin_offers') }}" class="hover:text-gray-300 text-black">Offers</a>
                            </div>
                        {% endif %}
                        {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN')%}
                            <a href="{{ path('offer_index') }}" class="hover:text-gray-300 text-black">Offers</a>
                                <a href="{{ path('dashboard') }}" class="hover:text-gray-300 text-black">My infos</a>
                                <a href="{{ path('request_index') }}" class="hover:text-gray-300 text-black">üì© Requests</a>
                                <a href="{{ path('app_notification') }}" class="hover:text-gray-300 text-black">üõéÔ∏è Notifications</a>
                                <a href="{{ path('chat_index') }}" class="hover:text-gray-300 text-black">Chat</a>
                                {% endif %}
                        {% if is_granted('ROLE_ADMIN') and not is_granted('ROLE_USER') %}
                        <a href="{{ path('app_skill') }}" class="hover:text-gray-300 text-black">Skills</a>
                                <a href="{{ path('app_user') }}" class="hover:text-gray-300 text-black">Users</a>
                                <a href="{{ path('admin_manage_reports') }}" class="hover:text-gray-300 text-black">Reports</a>
                                <a href="{{ path('admin_offers') }}" class="hover:text-gray-300 text-black">Offers</a>
                                {% endif %}
                    {% endif %}
                </nav>
            </div>
            <div>
                {% if not app.user %}
                    <a href="{{ path('security_login') }}" class="bg-white text-purple-700 px-4 py-2 rounded-lg">LogIn</a>
                {% endif %}
                {% if app.user %}
                    <a href="{{ path('security_logout') }}" class="bg-white text-purple-700 px-4 py-2 rounded-lg">LogOut</a>
                {% endif %}
            </div>
        </div>
    </header>

    <script>
        function toggleDropdown() {
            document.getElementById("dropdown-menu").classList.toggle("hidden");
        }
        
        function setRole(role) {
            localStorage.setItem("selectedRole", role);
            updateRoleDisplay();
        }
        
        function updateRoleDisplay() {
            let selectedRole = localStorage.getItem("selectedRole");
            if (selectedRole === "user") {
                document.getElementById("user-links").classList.remove("hidden");
                document.getElementById("admin-links").classList.add("hidden");
            } else if (selectedRole === "admin") {
                document.getElementById("admin-links").classList.remove("hidden");
                document.getElementById("user-links").classList.add("hidden");
            }
        }
        
        document.addEventListener("DOMContentLoaded", updateRoleDisplay);
    </script>

    <main class="container mt-4">
        {% block body %}{% endblock %}
    </main>

    <footer class="bg-gray-900 text-white text-center p-3 mt-5">
        <p>&copy; 2025 SkillSwap. Tous droits r√©serv√©s.</p>
    </footer>
</body>
</html>
