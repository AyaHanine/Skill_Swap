{% extends 'base.html.twig' %}

{% block body %}
    <!-- Hero Section -->
    <section class="relative flex items-center justify-center h-screen bg-[#f5f1e7] text-black text-center">
        <div class="px-6 max-w-3xl">
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight">
                Unlock & Exchange Skills with <span class="text-[#756B5E]">SkillSwap</span>
            </h1>
            <p class="text-lg mt-4 text-[#756B5E]">Join <span class="font-bold text-black">3,000+</span> learners and mentors worldwide.</p>

            <!-- Search Bar -->
            <div class="mt-6 flex justify-center">
                <input type="text" class="px-4 py-3 rounded-l-full text-gray-800 w-64 md:w-96 focus:ring-2 focus:ring-[#A89C8D]" placeholder="What do you want to learn?">
                <button class="px-6 py-3 bg-[#A89C8D] hover:bg-[#8c8071] text-white font-semibold rounded-r-full transition">Search</button>
            </div>
        </div>
    </section>

    <!-- Why SkillSwap Section -->
    <section class="flex items-center justify-center py-16 bg-[#EEE8DC]">
        <div class="text-center max-w-3xl">
            <h2 class="text-4xl md:text-5xl font-bold text-black">Learn & Teach for Free!</h2>
            <p class="text-lg text-[#5C5246] mt-4">Find a mentor, improve your skills, and contribute to a knowledge-sharing community.</p>
        </div>
    </section>

    <!-- Features Section -->
    <section class="container mx-auto py-16 px-6 text-center">
        <div class="grid md:grid-cols-3 gap-8">
            {% set features = [
                { icon: 'https://img.icons8.com/ios/452/cloud.png', title: 'Skill Marketplace', text: 'Explore a diverse range of skills â€“ from coding to photography, languages to business.' },
                { icon: 'https://img.icons8.com/ios/452/light-on.png', title: 'Seamless Connection', text: 'Find mentors and learners effortlessly. Swap skills and grow together!' },
                { icon: 'https://img.icons8.com/ios/452/code.png', title: 'Vibrant Community', text: 'Join a thriving network of passionate individuals exchanging knowledge every day.' }
            ] %}

            {% for feature in features %}
                <div class="bg-[#F8F5ED] p-8 rounded-xl shadow-md hover:shadow-lg transition transform hover:scale-105">
                    <div class="flex justify-center mb-4">
                        <img src="{{ feature.icon }}" alt="{{ feature.title }}" class="w-16 h-16"/>
                    </div>
                    <h3 class="text-2xl font-semibold mb-3 text-black">{{ feature.title }}</h3>
                    <p class="text-[#5C5246]">{{ feature.text }}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- About Us Section -->
    <section class="container mx-auto py-16 px-6 flex flex-col md:flex-row items-center bg-[#E5DED1] rounded-xl shadow-lg">
        <div class="w-full md:w-1/2 mb-6 md:mb-0">
            <img src="{{ asset('image/image1.png') }}" alt="About Us" class="w-full rounded-xl shadow-lg">
        </div>
        <div class="w-full md:w-1/2 md:pl-12 text-center md:text-left">
            <h2 class="text-3xl font-bold text-black mb-4">About Us</h2>
            <p class="text-lg text-[#5C5246]">
                At SkillSwap, we believe in the power of sharing knowledge. Connect, teach, and learn globally with like-minded individuals.
            </p>
            <p class="text-lg text-[#5C5246] mt-4">
                Join our platform today and discover how skill-sharing can change lives.
            </p>
        </div>
    </section>
{% endblock %}
