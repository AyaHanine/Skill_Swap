{% extends 'base.html.twig' %}

{% block body %}
    <!-- Hero Section -->
    <section class="relative flex items-center justify-center h-screen bg-gradient-to-r from-purple-700 to-purple-500 text-white text-center">
        <div class="px-6 max-w-3xl">
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight">
                Unlock & Exchange Skills with <span class="text-yellow-300">SkillSwap</span>
            </h1>
            <p class="text-lg mt-4">Join <span class="font-bold text-yellow-300">3,000+</span> learners and mentors worldwide.</p>
            
            <!-- Register Button -->
            <div class="mt-6">
                <a href="{{ path('register') }}" class="px-6 py-3 bg-white text-purple-700 font-semibold rounded-full shadow-md hover:bg-gray-200 transition">Register Now</a>
            </div>
        </div>
    </section>

    <!-- Navigation Bar Style Update -->
    <style>
        nav a {
            color: white !important;
            font-weight: bold;
        }
        nav a:hover {
            color: yellow !important;
        }
        .navbar {
            max-width: 80%;
            margin: auto;
        }
    </style>

    <!-- Why SkillSwap Section -->
    <section class="flex items-center justify-center py-16 bg-gray-100">
        <div class="text-center max-w-3xl">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900">Learn & Teach for Free!</h2>
            <p class="text-lg text-gray-700 mt-4">Find a mentor, improve your skills, and contribute to a knowledge-sharing community.</p>
        </div>
    </section>

    <!-- Features Section -->
    <section class="container mx-auto py-16 px-6 text-center">
        <div class="grid md:grid-cols-3 gap-8">
            {% set features = [
                { icon: 'https://img.icons8.com/ios/452/cloud.png', title: 'Skill Marketplace', text: 'Explore a diverse range of skills â€“ from coding to photography, languages to business.' },
                { icon: 'https://img.icons8.com/ios/452/light-on.png', title: 'Seamless Connection', text: 'Find mentors and learners effortlessly. Swap skills and grow together!' },
                { icon: 'https://img.icons8.com/ios/452/code.png', title: 'Vibrant Community', text: 'Join a thriving network of passionate individuals exchanging knowledge every day.' }
            ] %}

            {% for feature in features %}
                <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition transform hover:scale-105">
                    <div class="flex justify-center mb-4">
                        <img src="{{ feature.icon }}" alt="{{ feature.title }}" class="w-16 h-16"/>
                    </div>
                    <h3 class="text-2xl font-semibold mb-3 text-gray-900">{{ feature.title }}</h3>
                    <p class="text-gray-600">{{ feature.text }}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- About Us Section -->
    <section class="container mx-auto py-16 px-6 flex flex-col md:flex-row items-center bg-gray-200 rounded-xl shadow-lg">
        <div class="w-full md:w-1/2 mb-6 md:mb-0 flex justify-center">
            <img src="{{ asset('image/aboutUs.png') }}" alt="About Us" class="w-4/5 rounded-xl shadow-lg object-cover">
        </div>
        <div class="w-full md:w-1/2 md:pl-12 text-center md:text-left">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">About Us</h2>
            <p class="text-lg text-gray-700">
                At SkillSwap, we believe in the power of sharing knowledge. Connect, teach, and learn globally with like-minded individuals.
            </p>
            <p class="text-lg text-gray-700 mt-4">
                Join our platform today and discover how skill-sharing can change lives.
            </p>
            <!-- Register Button -->
            <div class="mt-6">
                <a href="{{ path('register') }}" class="px-6 py-3 bg-purple-700 text-white font-semibold rounded-full shadow-md hover:bg-gray-200 transition">Register Now</a>
            </div>
        </div>
    </section>

  
{% endblock %}
