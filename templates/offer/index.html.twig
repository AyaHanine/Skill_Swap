{% extends 'base.html.twig' %}

{% block title %}Mes Offres{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <!-- Barre de recherche et bouton d'ajout d'offre -->
        <div class="flex justify-between items-center mb-6">
            <form method="GET" action="{{ path('offer_index') }}" class="flex bg-white shadow-lg rounded-lg overflow-hidden">
                <input type="hidden" name="type" value="{{ type }}">
                <input type="text" name="search" placeholder="Rechercher des offres..." value="{{ search }}" class="px-4 py-3 w-80 outline-none">
                <button type="submit" class="px-6 py-3 bg-purple-700 text-white font-semibold hover:bg-purple-800 transition">üîç</button>
            </form>
            {% if app.user %}
                <a href="{{ path('offer_new') }}" class="bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-800 transition">‚ûï Ajouter une offre</a>
            {% endif %}
        </div>

        <!-- Switch entre les types d'offres -->
        <div class="flex justify-center mb-6">
            <div class="inline-flex bg-gray-200 p-1 rounded-lg">
                <a href="{{ path('offer_index', {'type': 'all'}) }}" class="px-4 py-2 rounded-lg font-semibold transition {% if type == 'all' %}bg-purple-700 text-white{% else %}text-gray-700{% endif %}">Toutes</a>
                <a href="{{ path('offer_index', {'type': 'mine'}) }}" class="px-4 py-2 rounded-lg font-semibold transition {% if type == 'mine' %}bg-purple-700 text-white{% else %}text-gray-700{% endif %}">Mes Offres</a>
                <a href="{{ path('offer_index', {'type': 'matching'}) }}" class="px-4 py-2 rounded-lg font-semibold transition {% if type == 'matching' %}bg-purple-700 text-white{% else %}text-gray-700{% endif %}">Offres Correspondantes</a>
            </div>
        </div>

        <h2 class="text-3xl font-bold text-center text-gray-900 mb-6">Les Offres</h2>
        
        {% if search %}
            <p class="text-center text-gray-700 mb-4">R√©sultats pour : <strong>{{ search }}</strong></p>
            <div class="text-center mb-6">
                <a href="{{ path('offer_index') }}" class="text-purple-700 hover:underline">R√©initialiser la recherche</a>
            </div>
        {% endif %}

        {% if pagination.items is empty %}
            <p class="text-center text-gray-700">Aucune offre ne correspond √† votre recherche.</p>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {% for offer in pagination %}
                    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
                        <h5 class="text-xl font-bold text-purple-700 mb-2">
                            <a href="{{ path('offer_show', { id: offer.id }) }}">{{ offer.title }}</a>
                        </h5>
                        <p class="text-gray-600 mb-2"><span class="px-3 py-1 bg-green-500 text-white text-sm rounded-full">{{ offer.status.value }}</span></p>
                        <p class="text-gray-700 mb-4">{{ offer.description|slice(0, 100) }}...</p>
                        <a href="{{ path('offer_show', { id: offer.id }) }}" class="inline-block bg-purple-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-purple-800 transition">Voir l'offre</a>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="mt-8 text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
