{% extends 'base.html.twig' %}

{% block title %}Mes Offres{% endblock %}

{% block body %}
    <style>
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
        .search-box, .filter-box {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .search-box input, .filter-box select {
            padding: 10px;
            width: 100%;
            max-width: 400px;
            border: 2px solid #ccc;
            border-radius: 10px;
        }
        .offer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .offer-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }
        .offer-card:hover {
            transform: scale(1.05);
        }
        .offer-title a {
            font-size: 1.2rem;
            color: #007BFF;
            text-decoration: none;
        }
        .offer-title a:hover {
            color: #0056b3;
        }
        .status-badge {
            background: green;
            color: white;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
        }
        .pagination {
            text-align: center;
            margin-top: 20px;
        }
    </style>

    <div class="container">
        <!-- Filtrage des offres -->
        <div class="filter-box">
            <form method="GET" action="{{ path('offer_index') }}">
                <select name="type" onchange="this.form.submit()">
                    <option value="all" {% if type == 'all' %}selected{% endif %}>Toutes les Offres</option>
                    <option value="mine" {% if type == 'mine' %}selected{% endif %}>Mes Offres</option>
                    <option value="matching" {% if type == 'matching' %}selected{% endif %}>Offres Qui Me Correspondent</option>
                </select>
            </form>
        </div>

        <!-- Barre de recherche -->
        <div class="search-box">
            <form method="GET" action="{{ path('offer_index') }}">
                <input type="hidden" name="type" value="{{ type }}">
                <input type="text" name="search" placeholder="Rechercher des offres..." value="{{ search }}">
                <button type="submit">üîç</button>
            </form>
        </div>

        <h2>Les Offres</h2>
        {% if app.user %}
            <a href="{{ path('offer_new') }}" class="btn">‚ûï Ajouter une offre</a>
        {% endif %}

        {% if search %}
            <p>R√©sultats pour : <strong>{{ search }}</strong></p>
            <a href="{{ path('offer_index') }}">R√©initialiser la recherche</a>
        {% endif %}

        {% if pagination.items is empty %}
            <p>Aucune offre ne correspond √† votre recherche.</p>
        {% else %}
            <div class="offer-grid">
                {% for offer in pagination %}
                    <div class="offer-card">
                        <h5 class="offer-title">
                            <a href="{{ path('offer_show', { id: offer.id }) }}">{{ offer.title }}</a>
                        </h5>
                        <p><span class="status-badge">{{ offer.status.value }}</span></p>
                        <p>{{ offer.description|slice(0, 100) }}...</p>
                        <a href="{{ path('offer_show', { id: offer.id }) }}" class="btn">Voir l'offre</a>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="pagination">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
