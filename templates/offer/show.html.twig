{% extends 'base.html.twig' %}

{% block title %}{{ offer.title }}{% endblock %}

{% block body %}
    <div class="relative min-h-screen flex items-center justify-center py-10">
        <!-- Background Design -->
        <div class="absolute inset-0 flex items-center justify-center z-0">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 opacity-80 w-3/4 h-3/4 rounded-2xl transform rotate-6"></div>
        </div>

        <!-- Offer Container -->
        <div class="relative z-10 bg-white p-8 rounded-xl shadow-xl w-full max-w-2xl">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">{{ offer.title }}</h2>

            <div class="mb-4">
                <p class="text-lg text-gray-700"><strong>Description :</strong> {{ offer.description }}</p>
                <p class="text-lg text-gray-700"><strong>Post√© par :</strong> {{ offer.user.firstName }} {{ offer.user.lastName }}</p>
            </div>

            <!-- Statut de l'offre -->
            <div class="mb-4">
                <strong>Statut :</strong>
                {% if offer.status.value == 'reserv√©' %}
                    <span class="px-3 py-1 bg-yellow-500 text-white text-sm rounded-full">R√©serv√©e</span>
                {% elseif offer.status.value == 'banni' %}
                    <span class="px-3 py-1 bg-red-500 text-white text-sm rounded-full">Bannie</span>
                {% elseif offer.status.value == 'termin√©' %}
                    <span class="px-3 py-1 bg-gray-500 text-white text-sm rounded-full">Termin√©e</span>
                {% elseif offer.status.value == 'annul√©' %}
                    <span class="px-3 py-1 bg-orange-500 text-white text-sm rounded-full">Annul√©e</span>
                {% else %}
                    <span class="px-3 py-1 bg-green-500 text-white text-sm rounded-full">Disponible</span>
                {% endif %}
            </div>

            <!-- Comp√©tences li√©es √† l'offre -->
            <div class="mb-4">
                <p><strong>Comp√©tence Offerte :</strong> <span class="text-indigo-600">{{ offer.skillOffered.name }}</span></p>
                <p><strong>Comp√©tence Recherch√©e :</strong> <span class="text-indigo-600">{{ offer.skillWanted.name }}</span></p>
                <p><strong>N√©gociable :</strong>
                    {% if offer.isNegotiable %}
                        ‚úÖ Oui
                    {% else %}
                        ‚ùå Non
                    {% endif %}
                </p>
            </div>

            <!-- Boutons Modifier et Supprimer pour l'auteur -->
            {% if app.user and app.user.id == offer.user.id %}
                <div class="flex justify-between mt-6">
                    <a href="{{ path('offer_edit', { id: offer.id }) }}" class="bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300">
                        ‚úèÔ∏è Modifier
                    </a>
                    <form method="POST" action="{{ path('offer_delete', { id: offer.id }) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette offre ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                        <button type="submit" class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition duration-300">
                            üóëÔ∏è Supprimer
                        </button>
                    </form>
                </div>
            {% endif %}

            <!-- Bouton de signalement pour les autres utilisateurs -->
            {% if app.user and app.user.id != offer.user.id %}
                <div class="mt-4 text-center">
                    <a href="{{ path('report_offer', { id: offer.id }) }}" class="text-red-600 font-semibold hover:underline">
                        üö® Signaler cette offre
                    </a>
                </div>
            {% endif %}

            <!-- Envoi de demande -->
            {% if app.user and offer.user != app.user %}
                {% set hasRequiredSkill = false %}
                {% for skill in app.user.skills %}
                    {% if skill.id == offer.skillOffered.id %}
                        {% set hasRequiredSkill = true %}
                    {% endif %}
                {% endfor %}

                {% if offer.status.value not in ['reserv√©', 'banni', 'termin√©', 'annul√©'] and (offer.isNegotiable or hasRequiredSkill) %}
                    <form method="POST" action="{{ path('request_send', { id: offer.id }) }}" class="mt-4">
                        <input type="hidden" name="_token" value="{{ csrf_token('request_send' ~ offer.id) }}">
                        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition duration-300">
                            ‚úâÔ∏è Envoyer une demande
                        </button>
                    </form>
                {% elseif not offer.isNegotiable and not hasRequiredSkill %}
                    <p class="text-red-500 text-center">‚ùå Vous ne pouvez pas envoyer de demande car vous n'avez pas la comp√©tence requise.</p>
                {% else %}
                    <p class="text-red-600 font-bold text-center mt-4">Cette offre est r√©serv√©e. Vous ne pouvez plus envoyer de demande.</p>
                {% endif %}
            {% endif %}

            <!-- Section des avis -->
            <div class="mt-8">
                <h4 class="text-lg font-semibold">Avis des utilisateurs</h4>
                {% for review in offer.reviews %}
                    <div class="border p-3 my-2 rounded-lg shadow-sm">
                        <strong>{{ review.author.firstName }} {{ review.author.lastName }}</strong> - {{ review.createdAt|date('d/m/Y') }}
                        <p class="text-yellow-500">‚≠ê {{ review.rating }}/5</p>
                        <p class="text-gray-700">{{ review.comment }}</p>
                    </div>
                {% else %}
                    <p class="text-gray-500 text-center">Aucun avis pour cette offre.</p>
                {% endfor %}
            </div>

            <!-- Formulaire pour ajouter un avis -->
            {% if app.user and offer.user != app.user and form is defined %}
                <form method="POST" action="{{ path('review_add', { id: offer.id }) }}" class="mt-4 space-y-4">
                    {{ form_start(form) }}

                    <label for="rating" class="block text-gray-700 font-semibold">Note (1 √† 5 √©toiles) :</label>
                    {{ form_widget(form.rating, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg shadow-sm'}}) }}

                    <label for="comment" class="block text-gray-700 font-semibold">Commentaire :</label>
                    {{ form_widget(form.comment, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg shadow-sm'}}) }}

                    <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition duration-300">
                        üí¨ Soumettre l'avis
                    </button>

                    {{ form_end(form) }}
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
