{% extends 'base.html.twig' %}

{% block body %}
    <!-- Registration Form -->
    <section class="container mx-auto py-16 px-6 flex justify-center relative">
        <div class="w-full max-w-lg bg-white p-8 rounded-xl shadow-xl relative z-10">
            <h2 class="text-3xl font-bold text-center text-gray-900 mb-6">Registration Form</h2>
            
           {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Error:</strong>
                    <span class="block sm:inline">{{ flash_error }}</span>
                    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                        <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 5.652a1 1 0 10-1.414-1.414L10 7.172 7.066 4.238a1 1 0 00-1.414 1.414l2.934 2.934-2.934 2.934a1 1 0 001.414 1.414L10 9.586l2.934 2.934a1 1 0 001.414-1.414l-2.934-2.934 2.934-2.934z"/></svg>
                    </span>
                </div>
            {% endfor %}


            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
                <div class="grid grid-cols-2 gap-4">
                    {{ form_row(registrationForm.firstName, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg'}}) }}
                    {{ form_row(registrationForm.lastName, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg'}}) }}
                </div>
                {{ form_row(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg'}}) }}
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg'}, 'label': 'Password'}) }}
                {{ form_row(registrationForm.bio, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg'}}) }}
                
                <!-- Custom Skills Selection Buttons -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">Select Your Skills</label>
                    {{form_row(registrationForm.skills, {'attr': {'class': 'hidden'}})}}
                    <div class="flex flex-wrap gap-2">
                        {% for skill in registrationForm.skills.vars.choices %}
                            <label class="cursor-pointer px-4 py-2 bg-purple-600 text-white rounded-full shadow-md hover:bg-purple-700 transition">
                                <input type="checkbox" name="{{ registrationForm.skills.vars.full_name }}[]" value="{{ skill.value }}" class="hidden" onclick="this.parentElement.classList.toggle('bg-purple-800');"> {{ skill.label }}
                            </label>
                        {% endfor %}
                    </div>
                </div>
                
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="w-full bg-gradient-to-r from-purple-700 to-purple-500 text-white px-6 py-3 rounded-lg hover:from-purple-600 hover:to-purple-400 transition shadow-md">Submit</button>
            {{ form_end(registrationForm) }}
        </div>

        <!-- Background Design -->
        <div class="absolute inset-0 flex items-center justify-center z-0">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 opacity-80 w-3/4 h-3/4 rounded-2xl transform rotate-6"></div>
        </div>
    </section>

  
{% endblock %}
