{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="relative min-h-screen flex justify-center items-center ">
        <!-- Background Design -->
        <div class="absolute inset-0 flex items-center justify-center z-0">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 opacity-80 w-3/4 h-3/4 rounded-2xl transform rotate-6"></div>
        </div>
        
        <div class="bg-white rounded-lg p-10 shadow-xl w-full max-w-md relative z-10">
            <div class="flex justify-center mb-6">
                <div class="bg-purple-600 text-white p-4 rounded-full shadow-lg">
                    <!-- Icon User -->
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-3.31 0-6 2.69-6 6h12c0-3.31-2.69-6-6-6z"></path></svg>
                </div>
            </div>
            
            <form method="post" action="{{ path('security_login') }}" class="space-y-6">
                {% if error %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                
                <h1 class="text-2xl font-bold text-center text-gray-900">Login to Your Account</h1>
                
                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-gray-700 font-semibold">Email</label>
                    <div class="flex items-center border border-gray-300 rounded-lg p-3 mt-2 bg-gray-100">
                        <svg class="w-5 h-5 text-gray-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M3 6l9 6 9-6"></path><path d="M4 6v12l8 6 8-6V6"></path></svg>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full bg-gray-100 outline-none text-gray-800 p-2" placeholder="Enter your email" required autofocus>
                    </div>
                </div>
                
                <!-- Password Field -->
                <div>
                    <label for="password" class="block text-gray-700 font-semibold">Password</label>
                    <div class="flex items-center border border-gray-300 rounded-lg p-3 mt-2 bg-gray-100">
                        <svg class="w-5 h-5 text-gray-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 3v18m9-9H3"></path></svg>
                        <input type="password" name="password" id="inputPassword" class="w-full bg-gray-100 outline-none text-gray-800 p-2" placeholder="Enter your password" autocomplete="current-password" required>
                    </div>
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <!-- Remember Me Checkbox -->
                <div class="flex items-center">
                    <input type="checkbox" id="remember" class="text-purple-600">
                    <label for="remember" class="text-gray-700 ml-2">Remember me</label>
                </div>
                
                <!-- Forgot Password Link -->
                <div class="flex justify-between">
                    <a href="#" class="text-purple-600 hover:text-purple-800 text-sm">Forgot Password?</a>
                </div>
                
                <!-- Login Button -->
                <button type="submit" class="w-full bg-purple-600 text-white py-3 rounded-lg hover:bg-purple-700 transition duration-300 shadow-md">Login</button>
            </form>
        </div>
    </div>
{% endblock %}
