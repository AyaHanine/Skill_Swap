{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<body class="bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 min-h-screen flex justify-center items-center">
    <div class="bg-white rounded-lg p-8 shadow-lg w-full max-w-sm">
        <div class="flex justify-center mb-6">
            <div class="bg-blue-800 text-white p-4 rounded-full">
                <!-- Icon User -->
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-3.31 0-6 2.69-6 6h12c0-3.31-2.69-6-6-6z"></path></svg>
            </div>
        </div>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <!-- Email Field -->
            <div class="mb-4">
                <label for="email" class="block text-gray-700">Email ID</label>
                <div class="flex items-center border-2 border-gray-300 rounded-lg p-2 mt-2">
                    <svg class="w-5 h-5 text-gray-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M3 6l9 6 9-6"></path><path d="M4 6v12l8 6 8-6V6"></path></svg>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full outline-none text-gray-800 p-2" placeholder="Enter your email"  required autofocus>
    </div>
    </div>
    <!-- Password Field -->
            <div class="mb-4">
                <label for="password" class="block text-gray-700">Password</label>
                <div class="flex items-center border-2 border-gray-300 rounded-lg p-2 mt-2">
                    <svg class="w-5 h-5 text-gray-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 3v18m9-9H3"></path></svg>
    <input type="password" name="password" id="inputPassword" class="w-full outline-none text-gray-800 p-2" placeholder="Enter your password"autocomplete="current-password" required>
</div>
</div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

     <!-- Remember Me Checkbox -->
            <div class="flex items-center mb-4">
                <input type="checkbox" id="remember" class="text-purple-600">
                <label for="remember" class="text-gray-700 ml-2">Remember me</label>
            </div>

            <!-- Forgot Password Link -->
            <div class="flex justify-between mb-6">
                <a href="#" class="text-purple-600 hover:text-purple-800 text-sm">Forgot Password?</a>
            </div>

    <!-- Login Button -->
            <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition duration-300">Login</button>
        Sign in
    </button>
</form>
</div>
{% endblock %}
