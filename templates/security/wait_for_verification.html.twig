{% extends 'base.html.twig' %}

{% block body %}
    <!-- Email Verification Pending Page -->
    <section class="container mx-auto py-16 px-6 flex justify-center relative">
        <div class="w-full max-w-lg bg-white p-8 rounded-xl shadow-xl text-center relative z-10">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Email Verification Pending</h2>
            
            <p class="text-lg text-gray-700 mb-4">
                A confirmation email has been sent to your inbox. Please check your email to verify your account.
            </p>
            
            <p class="text-lg text-gray-700 mb-4">
                Didn't receive the email? Click the button below to resend it.
            </p>
            
            <a href="{{ path('resend_verification_email') }}" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 transition">
                Resend Verification Email
            </a>
        </div>

        <!-- Background Design -->
        <div class="absolute inset-0 flex items-center justify-center z-0">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 opacity-80 w-3/4 h-3/4 rounded-2xl transform rotate-6"></div>
        </div>
    </section>


{% endblock %}
