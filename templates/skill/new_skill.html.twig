{% extends 'base.html.twig' %}

{% block title %}Ajouter une compétence{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-lg bg-white shadow-lg rounded-2xl p-6">
        <h1 class="text-2xl font-semibold text-gray-800 mb-4 text-center">Ajouter une nouvelle compétence</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div>
                {{ form_label(form.name, 'Nom de la compétence', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <div>
                {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(form.status, {'attr': {'class': 'w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300'}}) }}
                {{ form_errors(form.status, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <div class="text-center">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                    <i class="fas fa-plus-circle"></i> Ajouter la compétence
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
