{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center rounded-top">
                        <h2 class="mb-0">Ajouter un utilisateur</h2>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'email'}}) }}
                                {{ form_errors(form.email) }}
                            </div>

                                {{form_widget(form.lastName, {'attr': {'class': 'hidden'}})}}
                                {{form_widget(form.firstName, {'attr': {'class': 'hidden'}})}}
                                {{form_widget(form.bio, {'attr': {'class': 'hidden'}})}}
                                {{form_widget(form.roles, {'attr': {'class': 'hidden'}})}}

                            <div>

               <div class="mb-3">
                                {{ form_label(form.roles, 'RÃ´le', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="p-3 border rounded-lg bg-light">
                                    {% for choice in form.roles.vars.choices %}
                                        <label class="cursor-pointer px-4 py-2 bg-primary text-white rounded shadow-sm hover:bg-dark transition">
                                            <input type="checkbox" name="{{ form.roles.vars.full_name }}[]" value="{{ choice.value }}" class="hidden" onclick="this.parentElement.classList.toggle('bg-secondary');"> {{ choice.label }}
                                        </label>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.roles) }}
                            </div>

                            <div class="d-grid">
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg rounded-pill'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
